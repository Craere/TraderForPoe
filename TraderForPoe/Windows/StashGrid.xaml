<Window x:Class="TraderForPoe.Windows.StashGrid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TraderForPoe.Windows"
        mc:Ignorable="d"
        Title="Stash Grid"
        WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize" Background="Transparent"
        Topmost="True" SnapsToDevicePixels="True" ShowInTaskbar="False"
        Left="{Binding WindowLocationLeft, Mode=TwoWay}"        
        Top="{Binding WindowLocationTop, Mode=TwoWay}"        
        Height="{Binding WindowHeight, Mode=TwoWay}"        
        Width="{Binding WindowWidth, Mode=TwoWay}"        
        >
    
    <Border BorderBrush="Aqua" BorderThickness="1">
        <Canvas Name="front_canvas"></Canvas>
    </Border>
</Window>
