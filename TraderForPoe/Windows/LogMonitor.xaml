<Window x:Class="TraderForPoe.Windows.LogMonitor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LogReader" Height="300" Width="505.724">
   
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="MinWidth" Value="70"></Setter>
            <Setter Property="Margin" Value="5,5,10,5"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <DockPanel>
            <WrapPanel DockPanel.Dock="Bottom" FlowDirection="RightToLeft">
                <Button Content="Start" Click="Button_Click_1"></Button>
                <Button Content="Stop" Click="Button_Click"></Button>
            </WrapPanel>
            <ListBox Name="lbLines" ItemsSource="{Binding Lines}"/>
        </DockPanel>
    </Grid>
</Window>
