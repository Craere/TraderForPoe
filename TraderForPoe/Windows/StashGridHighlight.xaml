<Window xmlns:Controls="clr-namespace:TraderForPoe.Controls"  x:Class="TraderForPoe.Windows.StashGridHighlight"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TraderForPoe.Windows"
        mc:Ignorable="d"
        Title="TestGrid" WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize"
        Topmost="True" SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="NearestNeighbor" ShowInTaskbar="False" Closing="Window_Closing">
    <Window.Background>
        <SolidColorBrush Opacity="0"/>
    </Window.Background>
    <Border BorderBrush="White" BorderThickness="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Name="row_1"/>
                <RowDefinition Name="row_2"/>
                <RowDefinition Name="row_3"/>
            </Grid.RowDefinitions>
            <StackPanel Name="spnl_Buttons" Grid.Row="0" Orientation="Horizontal">
            </StackPanel>
            <StackPanel Grid.Row="1"/>
            <Canvas Grid.Row="2"  Name="front_canvas"/>


        </Grid>
    </Border>
</Window>
